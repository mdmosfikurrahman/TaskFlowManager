type User {
    id: ID!
    name: String!
    email: String!
    phone: String
    position: String
    departmentName: String
}

input UserInput {
    name: String!
    email: String!
    phone: String
    position: String
    departmentId: ID!
}

extend type Query {
    getUsers: [User!]!
    getUserById(id: ID!): User
}

extend type Mutation {
    createUser(input: UserInput!): User!
    updateUser(id: ID!, input: UserInput!): User!
    deleteUser(id: ID!): Boolean!
}
